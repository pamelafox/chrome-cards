{
  "name": "QuizCards: Spanish",
  "version": "3.0.0",
  "manifest_version": 3,
  "description": "Use these interactive browser-based flash cards to easily learn Spanish vocabulary.",
  "permissions": [
    "storage",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": { 
    "128": "icon_128.png" 
  },
  "action": {
    "default_title": "Show the next flash card!",
    "default_icon": "browser_icon.png",
    "default_popup": "popup.html"
  }
}
